
.list {
  margin: 0 auto;
  height: 100%;
  width: 750rpx;
  height: 100vh;
}

.list_item {
  width: 650rpx;
  color: #fff;
  font-size: 30rpx;
  text-align: justify;
  margin: 30rpx auto;
  padding: 20rpx;
  border-radius: 18rpx;
  border-top: 2rpx solid rgba(255, 255, 255, 0.5);
  border-left: 2rpx solid rgba(255, 255, 255, 0.5);
  display: flex;
  flex-direction: column;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(5px);
  box-shadow: 20rpx 20rpx 20rpx rgba(0, 0, 0, 0.2);
}

.list_item text:nth-child(1) {
  font-size: 25rpx;
  color: rgb(11, 107, 145);
}


.btnContainer {
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.btnContainer .btn2 {
  width: 300rpx;
  padding: 0;
  margin: 0;
  font-weight: 500;
  border-radius: 18rpx;
  color: rgb(255, 255, 255);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  background-color: rgba(238, 238, 238, 0);
  
}